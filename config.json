{
  "log4js": {
    "appenders": {
      "out": {
        "type": "stdout"
      },
      "app": {
        "type": "file",
        "filename": "log4js/shoper.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      }
    },
    "categories": {
      "default": {
        "appenders": [
          "out",
          "app"
        ],
        "level": "trace"
      }
    }
  },
  "encoding": "utf8"
}